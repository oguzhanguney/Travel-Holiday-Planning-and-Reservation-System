@model List<GetAllGuideQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>CQRS-MediatR Rehber Listeleme Sayfası</h1>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Görsel</th>
        <th>Rehber Adı</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.GuideId</th>
            <td><img src="@item.Image" height="50" width="50" style="border-radius:50%" /></td>
            <td>@item.Name</td>
            <td>@item.Description </td>
            <td><a href="#" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Admin/GuideMediatR/GetGuides/@item.GuideId" class="btn btn-outline-warning">Güncelle</a></td>
        </tr>
    }
</table>

<td><a href="/Admin/GuideMediatR/AddGuide/" class="btn btn-outline-success">Yeni Rehber Ekle</a></td>
