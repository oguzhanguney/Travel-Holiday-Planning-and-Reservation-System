@model TravelerCoreProject.Models.MailRequest
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h1>Yeni Mail Gönderme Sayfası</h1>
<form method="post">
    <div class="form-group">
        @Html.Label("Alıcı Mail Adresi")
        <input type="text" asp-for="ReceiverMail" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Konu Başlığı")
        <input type="text" asp-for="Subject" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Mesaj İçeriği")
        <textarea cols="30" rows="5" asp-for="Body" class="form-control"></textarea>
    </div>
    <br />


    <style>
        .container {
            display: flex;
            justify-content: flex-end;
        }
    </style>
    <div class="container">
        <button class="btn btn-success">Mail Gönder</button>
    </div>
</form>

